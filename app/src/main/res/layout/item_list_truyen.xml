<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/imgAnhTruyen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_op"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvTenChap"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:background="#A8000000"
            android:gravity="center"
            android:text="OnePiece"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTenTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:text="Ten Truyen Tranh"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNamSX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam San Xuat"
            />

        <TextView
            android:id="@+id/tvTenTG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Ten Tac Gia"
            />
    </LinearLayout>
</LinearLayout>