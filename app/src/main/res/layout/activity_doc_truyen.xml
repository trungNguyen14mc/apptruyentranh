<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DocTruyenActivity">
    <androidx.cardview.widget.CardView
        android:elevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            app:title="Đọc Truyện"
            android:background="#FFFFFF">
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="30dp"
            android:id="@+id/btnbackChapter"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_height="30dp"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_toRightOf="@id/btnbackChapter"
            android:id="@+id/spinner_chapter"
            android:layout_height="30dp"/>
        <ImageButton
            android:id="@+id/btnNextChapter"
            android:layout_width="30dp"
            android:layout_toRightOf="@id/spinner_chapter"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listimg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>