<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".HoSoActivity">
    <androidx.cardview.widget.CardView
        android:background="@android:drawable/dialog_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            app:title="Trang Chính"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/layout"
            android:background="@android:drawable/dialog_frame"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            android:layout_margin="5dp"
            >
            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_toRightOf="@id/layout"
            android:id="@+id/txtHoSoName"
            android:text="Nguyễn Văn Trung"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_toRightOf="@id/layout"
            android:id="@+id/txtMaUser"
            android:text="Mã Người Dùng: 212"
            android:layout_below="@id/txtHoSoName"
            android:textSize="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Thông Tin Khác"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:text="Email"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txthoSoEmail"
            android:text="Trungnguyen12@gmail.com"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="#7E7070"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Số điện thoại"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Chưa có thông tin"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="#7E7070"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:text="Tuổi"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Chưa có thông tin"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="#7E7070"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>